<h2><%= author.name %></h2>
<div>
    <a href="/authors/edit">Edit</a>
    <form method="POST" action="/authors/<%= author._id %>?_method=DELETE">
        <button type="submit">Delete</button>
    </form>
</div>

<% if(books.length > 0) {%>
    <h2>Books By Author</h2>
    <div>
        <% books.map((book) => { %>
            <img length='100' height='150' src="<%= book.coverImagePath %>" alt="">
        <%})%>
    </div>
<%}%>

