<h1>Search Authors</h1>
<form action="./authors" method="GET">
    <label>Name</label>
    <input type="text" name='name' value=<%= searchOptions.name %>>
    <button type='submit'>Search</button>
</form>
<% authors.map((author) => {%>
    <div><%= author.name %></div>
    <a href='/authors/<%= author._id %>'>View</a>
    <a href='/authors/<%= author._id %>/edit'>Edit</a>
    <form method="POST" action='/authors/<%= author._id %>?_method=DELETE'>
        <button type='submit'>Delete</button>
    </form> 
<%})%>
